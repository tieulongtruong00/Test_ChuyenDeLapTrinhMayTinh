<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textStyle="bold"
        android:background="@color/background"
        android:textSize="28sp"
        android:textColor="@color/chutrang"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/chuden"
        android:textAlignment="center"
        android:text="Số lượng từ mỗi ngày"
        android:gravity="center_horizontal"></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btntru"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_tru"
            tools:ignore="InvalidId"></ImageButton>
    <TextView
        android:id="@+id/txtsoluongtu"
        android:layout_width="200dp"
        android:hint="0"
        android:textSize="20sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/btntru"
        android:background="@color/chutrang"
        android:outlineSpotShadowColor="@color/background">
</TextView>
    <ImageButton
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_toRightOf="@id/txtsoluongtu"></ImageButton>
    </RelativeLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/chuden"
        android:textAlignment="center"
        android:text="Chế độ luyện từ"
        android:gravity="center_horizontal"></TextView>
        <RadioButton
            android:id="@+id/radioButton1"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="80dp"
            android:background="@drawable/radius"
            android:text="Cho từ chọn nghĩa" />
        <RadioButton
            android:id="@+id/radioButton2"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="80dp"
            android:background="@drawable/radius"
            android:layout_toRightOf="@id/radioButton1"
            android:text="Chọn nghĩa cho từ" />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLuu"
            android:textSize="17sp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"></Button>
        <Button
            android:id="@+id/btnThoat"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"></Button>
</LinearLayout>

</LinearLayout>